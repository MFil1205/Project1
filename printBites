package printBites;

public class printBites {

	public static void main(String[] args) {
		
		printMegaBytesAndKiloBytes(0);

	}
	public static void printMegaBytesAndKiloBytes(int kiloByte) {
		if(kiloByte >= 0) {				
		int resultMbs = kiloByte / 1024;
		int resultKb = kiloByte % 1024;
			System.out.println(kiloByte + " KB "+ "= " + resultMbs + " MB and " + resultKb + " KB");
		}
		else {
			System.out.println("Invalid Value");
		}
	}

}
